
  <main class="main-content">

    <!--== Start My Account Area Wrapper ==-->
    <section class="account-area">
      <div class="container">
        <div class="row">
          <div class="col-sm-8 m-auto">
            <div class="section-title text-center">
              <h3 class="mt-5">OTP CONFIRMATION</h3>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <div class="login-form-content">
              <form action="/otp-matching" method="POST">

              {{#if loginerr}}
                <p class="error text-center" style="color: red;">Invalid number</p>
            {{/if}}
            {{#if otpvalidation}}
                <p class="error text-center" style="color: red;">invalid otp</p>
            {{/if}}  
        
                <div class="row">
                  <div class="col-12">
                    <div class="form-group">
                      <label for="username">Enter the OTP <span class="required">*</span></label>
                      <input type="phone" name="otp" class="form-control" required>
                    </div>
                  </div>
                  
                  <div class="col-12">
                    <div class="form-group">
                      <button type="submit" class="btn-login">Verify</button>
                    </div>
                  </div>
                  <div class="col-12">
                    <div class="form-group account-info-group mb--0">
                      
                      <a
                      href="/signup"
                      class="text-secondary"
                      style="width: fit-content; text-decoration: none;"
                    >Create new account</a>
                <br />
                      <a
                        href="/"
                        class="text-secondary"
                        style="width: fit-content; text-decoration: none;"
                      >Back to Home</a>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!--== End My Account Area Wrapper ==-->
  </main>

  
