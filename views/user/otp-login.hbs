<div class="container-fluid row   justify-content">
    <div class="col-md-6 m-auto">
        <div class="otp-form  d-flex justify-content-center"> 
        <div class="container mt-5 " >
            <h2 class="text-center fs-5 fw-bold mt-3">LOGIN WITH PHONE NUMBER</h2>
            
            <form action="/otp-verification" method="POST" class="text-center mt-4" >
            {{#if userBlock}}
                <p class="error text-center" style="color: red;">The number is blocked</p>
            {{/if}}

            {{#if userNotExist}}
                <p class="error text-center" style="color: red;">User doesnot exist</p>
            {{/if}}
                <div class="form-group text-center">
                    <label class="mb-3" style="color: #1e1d1d;">Enter your phone number</label>
                    <input type="text" class="form-control " name="number" placeholder="Phone" required>

                </div>
               
                 <a href="/signup" class="sign sign-info mt-4" style="width: fit-content; text-decoration: none; color:#6769f9;">Create new account</a>
                 <br>
                
                 
                <div class="mx-auto mt-3" style=" width: fit-content;">
                   
                    <button type="submit" class="btn " style="background-color: #6769f9; color:white;">Verify</button>
                </div>

                 
            </form>
        </div>
        </div>
    </div>
</div>