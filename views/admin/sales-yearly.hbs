
<div class="content-page">
  <!-- Start content -->
  <div class="content">
    <div class="container-fluid">

      <h4 class="page-title text-center p-2">Yearly Sales Report-{{currentYear}}</h4>
<div class="row">
    <div class="col-12">
        <div class="card m-b-30">
            <div class="card-body">
                <table id="yearlyReport" class="table table-striped table-bordered dt-responsive nowrap"
                    style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>Years</th>
                            {{#each yearlySalesReport}}
                            <th>{{this.year}}</th>
                            {{/each}}
                           
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td>Revenue</td>
                            {{#each yearlySalesReport}}
                            <td>{{this.grandTotal}}</td>
                            {{/each}}
                        </tr>

                    </tbody>
                </table>

            </div>
        </div>
    </div> <!-- end col -->
</div> <!-- end row -->



    </div>
    <!-- container-fluid -->

  </div>
  <!-- content -->

  <footer class="footer">
    <span class="d-none d-sm-inline-block"> Cozmo Admin Panel </span>
  </footer>

</div>

<script type="text/javascript" language="javascript"
    src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" language="javascript"
    src="https://cdn.datatables.net/buttons/2.0.1/js/dataTables.buttons.min.js"></script>
<script type="text/javascript" language="javascript"
    src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script type="text/javascript" language="javascript"
    src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script type="text/javascript" language="javascript"
    src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script type="text/javascript" language="javascript"
    src="https://cdn.datatables.net/buttons/2.0.1/js/buttons.html5.min.js"></script>
<script type="text/javascript" language="javascript"
    src="https://cdn.datatables.net/buttons/2.0.1/js/buttons.print.min.js"></script>
<script>
    $(document).ready(function () {
        $.noConflict(true);
        $('#yearlyReport').DataTable({
            dom: 'Bfrtip',
            {{!-- dom: 'frtipB', //TO MAKE THE BUTTONS AT THE BOTTOM --}}
        buttons: [
        'copy', 'csv', 'excel', 'pdf', 'print'
    ]
        });
    } );
</script>