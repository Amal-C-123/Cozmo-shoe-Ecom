<div class="content-page">
  <!-- Start content -->
  <div class="content">
    <div class="container-fluid">
             <h4 class="page-title text-center p-3">Monthly Sales Report-{{currentYear}}</h4>
 <div class="row">
    <div class="col-md-2">
            <select id="inputYear" class="form-control" onchange="changeYear()">
                <option selected>Choose year...</option>
                {{#each listedYears}}
                <option>{{this.year}}</option>
                {{/each}}
            </select>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card m-b-30">
            <div class="card-body">
                <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap"
                    style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>Months</th>
                            <th>Jan</th>
                            <th>Feb</th>
                            <th>Mar</th>
                            <th>Apr</th>
                            <th>May</th>
                            <th>Jun</th>
                            <th>Jul</th>
                            <th>Aug</th>
                            <th>Sept</th>
                            <th>Oct</th>
                            <th>Nov</th>
                            <th>Dec</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td>Revenue ({{currentYear}})</td>
                            {{#each monthlySalesReport}}
                            <td>{{this.grandTotal}}</td>
                            {{/each}}
                        </tr>

                    </tbody>
                </table>

            </div>
        </div>
    </div> <!-- end col -->
</div> <!-- end row -->
 </div>
      
    </div>
    <!-- container-fluid -->

  </div>
  <!-- content -->

  <footer class="footer">
    <span class="d-none d-sm-inline-block"> Cozmo Admin Panel </span>
  </footer>

</div>

<script>
     function changeYear() {
            let year= document.getElementById('inputYear').value
                        console.log("changeYear",year)
                        year=parseInt(year)

        $.ajax({
            url: "/admin/change-year",
            data: {
                year: year,
            },
            method: "post",
            success: (response) => {
                location.reload();
            },
        });
    }
</script>   