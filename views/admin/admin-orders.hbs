<div class="content-page">
  <!-- Start content -->
  <div class="content">
    <div class="container-fluid">

      <!-- START ROW -->
      <div class="row">
        <div class="col-xl-12">
          <div class="card m-b-30">
            <div class="card-body">
              <h4 class="mt-0 header-title mb-4">User Orders</h4>
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th scope="col">Date</th>
                      <th scope="col">Details</th>
                      <th scope="col">Payment Method</th>
                      <th scope="col">Status</th>
                      <th scope="col">Amount</th>
                      <th scope="col">Change Status</th>

                    </tr>
                  </thead>
                  <tbody>
                    {{#each Items}}
                      <tr>
                        <td> {{this.date}} </td>
                        <td>{{this.deliveryDetails.address}}
                          <br />{{this.deliveryDetails.city}}
                          <br />
                          {{this.deliveryDetails.country}}
                        </td>
                        <td>{{this.paymentMethod}} </td>
                        <td>{{this.status}} </td>
                        <td
                          data-order="1000"
                        >â‚¹ {{this.deliveryDetails.totalAmount}}</td>
                        <td data-order="1000">
                          <button
                            onclick="changeOrderStatus('{{this._id}}','pending')"
                            class="btn btn-sm btn-primary"
                          >Pending</button>
                          <button
                            onclick="changeOrderStatus('{{this._id}}','delivered')"
                            class="btn  btn-sm btn-primary"
                          >Delivered</button> <br>  
                          <button
                            onclick="changeOrderStatus('{{this._id}}','cancelled')"
                            class="btn  btn-sm btn-danger mt-1"
                          >Cancel</button>
                        </td>
                      </tr>
                    {{/each}}
                  </tbody>
                </table>
              </div>

            </div>
          </div>
        </div>

      </div>
      <!-- END ROW -->

    </div>
    <!-- container-fluid -->

  </div>
  <!-- content -->

  <footer class="footer">
    <span class="d-none d-sm-inline-block"> Cozmo Admin Panel </span>
  </footer>

</div>